<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="x-ua-compatible" content="ie=edge">

    <title>@ViewBag.Title</title>


    <!-- 1. Load libraries -->
    <!-- Polyfill(s) for older browsers -->
    <script src="~/lib/es6-shim/es6-shim.js"></script>
    <script src="~/lib/zone/zone.js"></script>
    <script src="~/lib/jquery/jquery.js"></script>
    <script src="~/lib/material-design-lite/material.js"></script>

    <!-- 2. Configure SystemJS -->
    <script src="~/jspm_packages/system.js"></script>
    <script src="~/jspm.config.js"></script>

    <script>
        System.import('app').catch(function (err) { console.error(err); });
    </script>

    <!-- Material Design Lite -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="http://fonts.googleapis.com/css?family=Roboto:300,400,500,700" type="text/css">
    <link rel="stylesheet" href="~/lib/material-design-lite/material.css" />

    <link rel="stylesheet" href="~/styles/site.css" />
</head>
<!-- 3. Display the application -->
<body>

    <!-- Always shows a header, even in smaller screens. -->
    <div class="mdl-layout mdl-js-layout mdl-layout--fixed-header">
        <header class="mdl-layout__header">
            <div class="mdl-layout__header-row">
                <!-- Title -->
                <span class="mdl-layout-title">Angular 2 Application</span>
                <!-- Add spacer, to align navigation to the right -->
                <div class="mdl-layout-spacer"></div>
                <!-- Navigation. We hide it in small screens. -->
                <nav class="mdl-navigation mdl-layout--large-screen-only">
                    <a class="mdl-navigation__link" href="">Link</a>
                    <a class="mdl-navigation__link" href="">Link</a>
                    <a class="mdl-navigation__link" href="">Link</a>
                    <a class="mdl-navigation__link" href="">Link</a>
                </nav>
            </div>
        </header>
        <main class="mdl-layout__content mdl-color--grey-300">
            <div class="page-content mdl-grid">
                <div class="mdl-cell mdl-cell--2-col mdl-cell--hide-tablet mdl-cell--hide-phone"></div>
                <div class="main-content mdl-color--white mdl-shadow--16dp content mdl-color-text--grey-800 mdl-cell mdl-cell--8-col">
                    @RenderBody()
                </div>
            </div>
        </main>
    </div>
</body>
</html>
