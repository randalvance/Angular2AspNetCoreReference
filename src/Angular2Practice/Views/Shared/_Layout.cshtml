<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="x-ua-compatible" content="ie=edge">

    <title>@ViewBag.Title</title>


    <!-- 1. Load libraries -->
    <!-- Polyfill(s) for older browsers -->
    <script src="~/lib/es6-shim/es6-shim.js"></script>
    <script src="~/lib/zone/zone.js"></script>
    <script src="~/lib/jquery/jquery.js"></script>
    <!-- Note: Tether is required for Bootstrap Tooltips -->
    <script src="~/lib/tether/js/tether.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.js"></script>

    <!-- 2. Configure SystemJS -->
    <script src="~/jspm_packages/system.js"></script>
    <script src="~/jspm.config.js"></script>

    <script>
        System.import('app').catch(function (err) { console.error(err); });
    </script>

    <link rel="stylesheet" href="~/lib/tether/css/tether.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.css" />
</head>
<!-- 3. Display the application -->
<body>
    <div class="container">
        <nav class="navbar navbar-light bg-faded">
            <ul class="nav navbar-nav">
                <li class="nav-item active">
                    <a class="nav-link" href="#">Home <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Features</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Pricing</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">About</a>
                </li>
            </ul>
        </nav>

        <div class="jumbotron">
            @RenderBody()
        </div>
    </div>
</body>
</html>
