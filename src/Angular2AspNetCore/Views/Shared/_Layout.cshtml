<!DOCTYPE html>

<html>
<head>
    <base href="/" /> <!-- Needed by Angular Routing -->

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="x-ua-compatible" content="ie=edge">

    <title>@ViewBag.Title</title>

    <script src="~/lib/es6-shim/es6-shim.js"></script>
    <script src="~/lib/systemjs/dist/system.js"></script>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/reflect-metadata/Reflect.js"></script>
    <script src="~/lib/zone.js/dist/zone.js"></script>

    <!-- Required for Bootstrap Tooltips -->
    <script src="~/lib/tether/dist/js/tether.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>

    <!-- 2. Configure SystemJS -->
    <script src="~/config.js"></script>
    <script>
        System.import('app').catch(function (err) { console.error(err); });
    </script>

    <link rel="stylesheet" href="~/lib/tether/dist/css/tether.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />

    <link rel="stylesheet" href="~/styles/site.css" />
</head>
<!-- 3. Display the application -->
<body>
    @RenderBody()
</body>
</html>
